plugins {
    id 'java'
    id 'net.minecraftforge.gradle' version '[6.0.21,)'
}

group = 'com.seu_nome'
version = '1.0.0'
base {
    archivesName = 'seu_mod'
}

java {
    toolchain.languageVersion = JavaLanguageVersion.of(21)
}

minecraft {
    mappings channel: 'official', version: '1.21.1'
    
    runs {
        client {
            workingDirectory project.file('run')
            forceExit false
            
            property 'forge.logging.markers', 'REGISTRIES'
            property 'forge.logging.level.net.minecraftforge', 'DEBUG'
            
            mods {
                seu_mod {
                    source sourceSets.main
                }
            }
        }

        server {
            workingDirectory project.file('run')
            forceExit false
            
            property 'forge.logging.markers', 'REGISTRIES'
            property 'forge.logging.level.net.minecraftforge', 'DEBUG'
            
            args '--nogui'
            
            mods {
                seu_mod {
                    source sourceSets.main
                }
            }
        }
    }
}

dependencies {
    minecraft 'net.minecraftforge:forge:1.21.1-52.0.0'
}

tasks.named('jar', Jar).configure {
    manifest {
        attributes([
            'Specification-Title'      : 'seu_mod',
            'Specification-Vendor'      : 'seu_nome',
            'Specification-Version'     : '1',
            'Implementation-Title'      : project.name,
            'Implementation-Version'    : project.jar.archiveVersion,
            'Implementation-Vendor'     : 'seu_nome',
            'Implementation-Timestamp'  : new Date().format("yyyy-MM-dd'T'HH:mm:ssZ")
        ])
    }
}

repositories {
    mavenCentral()
}
